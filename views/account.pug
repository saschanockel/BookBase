extends layout

block content
  .row
    .col-md-5
      .row-md.mb-4
        form(role='form' method='post' action='/customers/login')
          fieldset
            p.text-uppercase.pull-center Customer Sign In
            .form-group
              input#signInCustomerUsername.form-control.input-lg(type='text' name='signInCustomerUsername' placeholder='Username' required)
            .form-group
              input#signInCustomerPassword.form-control.input-lg(type='password' name='signInCustomerPassword' placeholder='Password' required)
            div(class='mt-3')
              input.btn.btn-primary(type='submit' value='Sign In')
      .row-md.mb-4
        form(role='form' method='post' action='sellers/login')
          form(role='form' method='post' action='/sellers/login')
            fieldset
              p.text-uppercase.pull-center Seller Sign In
              .form-group
                input#signUpCustomerUsername.form-control.input-lg(type='text' name='signInSellerUsername' placeholder='Username' required)
              .form-group
                input#signUpCustomerPassword.form-control.input-lg(type='password' name='signInSellerPassword' placeholder='Password' required)
              div(class='mt-3')
                input.btn.btn-primary(type='submit' value='Sign In')
    .col-md-2
      // -----null----
    .col-md-5
      form#signUpForm(role='form' method='post' action='/customers/signup')
        fieldset
          p.text-uppercase.pull-center Sign Up
          .form-group
            input#signUpUsername.form-control.input-lg(type='text' name='signUpUsername' placeholder='Username' required)
          .form-group
            input#signUpEmail.form-control.input-lg(type='email' name='signUpEmail' placeholder='E-Mail Address' required)
          .form-group
            input#signUpPassword.form-control.input-lg(type='password' name='signUpPassword' placeholder='Password' required)
          .form-group
            input#signUpConfirmPassword.form-control.input-lg(type='password' name='signUpConfirmPassword' placeholder='Confirm Password' required)
          .form-check
            label.form-check-label
              input#sellerCheckbox.form-check-input(type='checkbox')
              |                         Check if you want to create a Seller Account
          div(class='mt-3')
            input.btn.btn-primary(type='submit' value='Sign Up')
  script.
    $(document).ready(function () {
      $('#sellerCheckbox').change(function () {
        let checked = $('#sellerCheckbox').is(':checked');
        if (checked) {
          $('#signUpForm').attr('action', '/sellers/signup');
        } else {
          $('#signUpForm').attr('action', '/customers/signup');
        }
      })
    });
