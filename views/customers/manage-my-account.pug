extends ../layout

block content
  .row
    .col-md-6.mx-auto
      form(role='form' method='post' action='/customers/update-my-account?_method=PUT' enctype='form-data')
        fieldset
          p.text-uppercase.pull-center Edit your account details
          .form-group
            input.form-control.input-lg(type='text' name='username' placeholder='Username' minlength='3' maxlength='16' value=account.username required)
          .form-group
            input.form-control.input-lg(type='text' name='firstName' placeholder='First name' maxlength='128' value=account.firstName)
          .form-group
            input.form-control.input-lg(type='text' name='lastName' placeholder='Last name' maxlength='128' value=account.lastName)
          .form-group
            input.form-control.input-lg(type='email' name='email' placeholder='E-Mail Address' value=account.email required)
          .form-group
            input.form-control.input-lg(type='email' name='confirmEmail' placeholder='Confirm E-Mail Address' value=account.email required)
          .form-group
            input.form-control.input-lg(type='text' name='zip' placeholder='Zip code' maxlength='32' value=account.zip)
          .form-group
            input.form-control.input-lg(type='text' name='city' placeholder='City' maxlength='128' value=account.city)
          .form-group
            input.form-control.input-lg(type='text' name='address' placeholder='Address' maxlength='128' value=account.address)
          .form-group
            input.form-control.input-lg(type='tel' name='creditCardNr' inputmode='numeric' pattern='[0-9\s]{13,19}' autocomplete='cc-number' maxlength='19' placeholder='Credit card number' value=account.creditCardNr)
          .form-group
            p What is your favorite image editing program?
            input#signUpSecurityAnswer.form-control.input-lg(type='text' name='securityAnswer' placeholder='Security question answer' minlength='1' maxlength='32' value=account.securityanswer required)
          div(class='mt-3')
            input.btn.btn-primary(type='submit' value='Save')
    .col-md-6.mx-auto
      form(role='form' method='post' action='/customers/change-my-password?_method=PUT' enctype='form-data')
        fieldset
          p.text-uppercase.pull-center Change your password
          .form-group
            input.form-control.input-lg(type='password' name='password' placeholder='Password' minlength='8' maxlength='32' required)
          .form-group
            input.form-control.input-lg(type='password' name='confirmPassword' placeholder='Confirm Password' minlength='8' maxlength='32' required)
          div(class='mt-3')
            input.btn.btn-primary(type='submit' value='Save')
  .row
    .col-md-12.mx-auto.mt-3
      form(role='form' method='post' action=`/customers/delete-my-account?_method=DELETE` enctype='form-data')
        input.btn.btn-danger(type='submit' value='Delete my account')
